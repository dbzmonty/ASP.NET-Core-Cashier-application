@model Category

@section title {
    @if (Model != null)
    {
        <h3>Category: @Model.Name</h3>
    }
}

<form method="post" asp-asp-controller="categories" asp-action="Edit">

    <input type="hidden" asp-for="CategoryId" />

    <div class="row mb-3">
        <div class="col-2">
            <label class="col-form-label" asp-for="Name"></label>
        </div>
        <div class="col-6">
            <input class="form-control" type="text" asp-for="Name" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label class="col-form-label" asp-for="Description"></label>
        </div>
        <div class="col-6">
            <input class="form-control" type="text" asp-for="Description" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
        <div class="col-6">            
        </div>
    </div>
</form>